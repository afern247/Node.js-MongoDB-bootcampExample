<% include ../partials/header %> <!-- ../ means one lvl down -->



<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="img-thumbnail">
                <img class="img-fluid stretchIMG" src="<%= campground.image %>">
                <div class="caption">
                    <h4 class="float-right">$9.00/night</h4>
                    <h4><a><%=campground.name%></a></h4>
                    <p><%= campground.description %></p>
                    <p><em>Submited by <%= campground.author.username %></em></p>
                        <div class="ui right aligned grid">
                          <div class="sixteen wide column">
                              <div class="ui buttons">
                                    <button class="ui green basic button">Add New Comment</button>
                                    <button class="ui blue basic button">Edit</button>
                                    <button class="ui red basic button">Delete</button>
                                </div>
                            </div>
                        </div>
                </div>
            <div class="card card-body bg-light">

                 <div class="ui horizontal divider">
                    <em>< ></em>
                 </div>
                <% campground.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="float-right">10 days ago</span>
                            <p>
                                <%= comment.text %>
                            </p>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>




<% include ../partials/footer %>