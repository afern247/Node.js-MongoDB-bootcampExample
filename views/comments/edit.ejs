<% include ../partials/header %> <!-- ../ means one lvl down -->

<h1 id="createNewCampgroundHeader">Edit comment</h1>


<div class="container">
    <div class="row">
        <div class="newImageForm">
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= comment.text %>" name="comment[text]">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block">Submit</button>
                </div>

                <p><a href="/campgrounds">Go back</a></p>
            </form>
        </div>
    </div>
</div>


<% include ../partials/footer %>